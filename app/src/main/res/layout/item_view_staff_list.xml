<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/_8sdp"
        android:id="@+id/ll_staff_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:visibility="visible"
        android:background="@drawable/home_list_back">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.bzboss.app.custom.MyCustomTextView
                android:id="@+id/tv_staff_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_3sdp"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                tools:text="text one" />

            <com.bzboss.app.custom.MyCustomTextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_9sdp"
                android:textStyle="normal"
                tools:text="text one" />

        </LinearLayout>

        <com.bzboss.app.custom.RoundRectCornerImageView
            android:id="@+id/im_staff_image"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_95sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llStaffDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">


        <com.bzboss.app.custom.MyCustomTextView
            android:id="@+id/tvStaffName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp"
            android:textStyle="bold"
            tools:text="text one" />


        <com.bzboss.app.custom.RoundRectCornerImageView
            android:id="@+id/imStaffImage"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_175sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:contentDescription="TODO"
            android:scaleType="centerCrop"
            android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ll_home_back"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_8sdp"
            android:visibility="visible">


            <TextView
                android:id="@+id/tvMonthYearSelect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_weight="1"
                android:background="@drawable/plainborder"
                android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold">

            </TextView>


            <ImageButton
                android:id="@+id/ibDownLoad"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/white"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:tint="#509CD8"
                fresco:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/white"
                android:visibility="gone"
                fresco:srcCompat="@drawable/ic_baseline_share_24" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/ll_graph_back"
            android:padding="@dimen/_2sdp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lc_my_goal_activity_log_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ll_home_back" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>