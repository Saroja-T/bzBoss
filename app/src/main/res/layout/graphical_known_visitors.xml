<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_graphical_known_visitors"
    style="@style/clock_view_ll1"
    android:layout_marginEnd="@dimen/_16sdp"
    android:layout_marginStart="@dimen/_8sdp"
    android:background="@drawable/sixth_box">


<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_16sdp">
    <com.app.adprogressbarlib.AdCircleProgress
        android:id="@+id/pgb_knownVisitors"
        android:layout_width="@dimen/_110sdp"
        android:layout_height="@dimen/_110sdp"
        android:backgroundTintMode="add"
        app:adpgb_background_color="@color/sixthBox"
        app:adpgb_finished_color="@color/sixthBoxDark"
        app:adpgb_unfinished_color="@color/colorGreyLight"
        custom:adpgb_finished_stroke_width="@dimen/_7sdp"
        custom:adpgb_show_text="false"
        custom:adpgb_unfinished_stroke_width="@dimen/_7sdp"
        app:adpgb_progress="0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/tvKnownVisitorsCount"                                    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/_14sdp"
            android:text="@string/known_visitors"/>
    </LinearLayout>


</RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="end"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_5sdp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/_5sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/white"
        android:text="@string/max"/>
    <TextView
        android:id="@+id/tvTargetKnownVisitors"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_plain_grey_outline"
        android:gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingRight="@dimen/_7sdp"
        android:paddingBottom="@dimen/_3sdp"
        android:drawablePadding="@dimen/_3sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="0"/>
</LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/staff"
    android:textStyle="bold"
    android:textColor="@color/black"
    android:textSize="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_15sdp"
    android:visibility="gone"/>
</LinearLayout>
