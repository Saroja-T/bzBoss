<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".activity.WhatchFaceDashBordActivity">


            <LinearLayout
                android:id="@+id/ll_graph_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/ll_home_back"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:drawableEnd="@drawable/ic_baseline_arrow_back_ios_24"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvStaff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvForward"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone"
                        android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24" />

                </LinearLayout>



                <com.bzboss.app.custom.MyCustomTextView
                    android:id="@+id/tv_no_staff_available"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/ll_graph_back"
                    android:gravity="center"
                    android:text="No staff data available"
                    android:textSize="@dimen/_12sdp"
                    android:visibility="gone" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/ll_graph_back"
                    android:padding="@dimen/_2sdp"
                    android:layout_weight="1"
                    android:visibility="gone">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lc_my_goal_activity_log_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@drawable/ll_home_back" />
                </LinearLayout>


           </LinearLayout>


</androidx.core.widget.NestedScrollView>