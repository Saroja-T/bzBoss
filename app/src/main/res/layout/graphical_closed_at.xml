<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_graphical_closed_at"
    style="@style/clock_view_ll"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_16sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:background="@drawable/fifth_box">

    <RelativeLayout
        style="@style/clock_view_rl">

        <com.bzboss.app.custom.CustomAnalogClockClosedAt
            android:id="@+id/simpleAnalogClock2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_centerHorizontal="true"
            android:background="@color/firstBox"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvClosedAt"
        style="@style/clock_view_tv"/>
    <TextView
        style="@style/clock_view__label_tv"
        android:layout_marginBottom="@dimen/_10sdp"
        android:text="@string/closedAt"/>
</LinearLayout>
