<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/_60sdp"
    android:background="@color/background">

    <ImageView
        android:id="@+id/ic_close_side_menu"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_45sdp"
        android:layout_gravity="right"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:contentDescription="TODO"
        android:padding="@dimen/_14sdp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_40sdp"
        app:layout_constraintTop_toBottomOf="@+id/ic_close_side_menu"
        tools:ignore="MissingConstraints" />

    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_privacy_polivy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="Privacy policy"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_side_menu_home"
        tools:ignore="MissingConstraints" />

    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_term_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="Terms and Conditions"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_side_menu_privacy_polivy"
        tools:ignore="MissingConstraints" />

    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_abouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="About us"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_side_menu_term_condition"
        tools:ignore="MissingConstraints" />

    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_contacts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="Contact us"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_side_menu_abouts"
        tools:ignore="MissingConstraints" />


    <com.bzboss.app.custom.MyCustomTextView
        android:id="@+id/tv_side_menu_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:padding="@dimen/_8sdp"
        android:paddingStart="@dimen/_10sdp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/tv_side_menu_contacts"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/tv_side_icon"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_15sdp"


        android:contentDescription="TODO"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>