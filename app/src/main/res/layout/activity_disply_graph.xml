<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".activity.WhatchFaceDashBordActivity">

    <LinearLayout
        android:id="@+id/ll_graph_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/ll_first_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/watch_one_back"
            android:orientation="horizontal"
            android:padding="@dimen/_12sdp"
            app:layout_constraintTop_toTopOf="parent">

            <com.bzboss.app.custom.RoundRectCornerImageView
                android:id="@+id/im_graph_palce"
                android:layout_width="@dimen/_43sdp"
                android:layout_height="@dimen/_43sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:scaleType="centerCrop" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp">


                <LinearLayout
                    android:id="@+id/frist_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.bzboss.app.custom.MyCustomTextView
                            android:id="@+id/tv_watch_place_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Watch place"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            tools:ignore="MissingConstraints" />

                        <com.bzboss.app.custom.MyCustomTextView
                            android:id="@+id/tv_watch_place_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="Ahmedabad,Gujarat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/frist_view"
                            tools:ignore="MissingConstraints" />
                    </LinearLayout>

                    <com.bzboss.app.custom.MyCustomTextView
                        android:id="@+id/tv_open_close"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/home_list_second_list_second"
                        android:gravity="center"
                        tools:text="OPEN"
                        android:visibility="invisible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/frist_view">

                    <com.bzboss.app.custom.MyCustomTextView
                        android:id="@+id/tv_watch_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        tools:text="3:25 PM - Mar 22, 2021"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_9sdp"
                        android:textStyle="normal"
                        app:layout_constraintEnd_toEndOf="@+id/tv_watch_change_locatio"
                        tools:ignore="MissingConstraints" />

                    <com.bzboss.app.custom.MyCustomTextView
                        android:id="@+id/tv_watch_change_locatio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="@string/change_location"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_watch_time"
                        app:layout_constraintStart_toStartOf="@+id/tv_watch_time"
                        app:layout_constraintTop_toBottomOf="@+id/tv_watch_place_city"
                        tools:ignore="MissingConstraints" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/frist_home_background"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ll_first_view">

            <com.bzboss.app.custom.MyCustomTextView
                android:id="@+id/tv_selected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:text="Monday, March 22,2021" />

            <com.bzboss.app.custom.MyCustomTextView
                android:id="@+id/tvDatePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Watch place"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                android:visibility="gone"/>

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/ll_home_back"
                android:orientation="horizontal"
                  android:gravity="center"
                android:padding="@dimen/_8sdp"
                  android:visibility="visible">


                  <TextView
                      android:id="@+id/tvMonthYearSelect"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_35sdp"
                      android:layout_marginRight="@dimen/_15sdp"
                      android:layout_marginLeft="@dimen/_10sdp"
                      android:paddingRight="@dimen/_10sdp"
                      android:paddingLeft="@dimen/_15sdp"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:textSize="@dimen/_12sdp"
                      android:textColor="@color/black"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
                      android:drawableTint="@color/black"
                      android:background="@drawable/plainborder">

                  </TextView>


                  <ImageButton
                      android:id="@+id/ibDownLoad"
                      android:layout_width="@dimen/_40sdp"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/_10sdp"
                      android:paddingRight="@dimen/_10sdp"
                      android:paddingBottom="@dimen/_5sdp"
                      android:paddingTop="@dimen/_5sdp"
                      android:background="@color/white"
                      android:layout_marginRight="@dimen/_10sdp"
                      android:tint="#509CD8"
                      fresco:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

                  <ImageButton
                      android:id="@+id/imageButton"
                      android:layout_width="@dimen/_20sdp"
                      android:layout_height="wrap_content"
                      android:background="@color/white"
                      android:layout_margin="@dimen/_10sdp"
                      fresco:srcCompat="@drawable/ic_baseline_share_24"
                      android:visibility="gone"/>


              </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/ll_home_back"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp">


                <com.bzboss.app.custom.MyCustomTextView
                    android:id="@+id/tv_graph_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    tools:text="Monday, March 22,2021"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <!-- <com.bzboss.app.custom.RoundRectCornerImageView
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_220sdp"
                     android:layout_gravity="center"
                     android:id="@+id/im_view_detail"
                     android:layout_marginStart="@dimen/_10sdp"
                     android:layout_marginTop="@dimen/_5sdp"
                     android:layout_marginEnd="@dimen/_10sdp"
                      />-->

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/im_view_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_2sdp"
                    fresco:progressBarAutoRotateInterval="1000"
                    fresco:roundedCornerRadius="@dimen/_8sdp"
                    android:visibility="gone"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/ll_graph_back"
                    android:padding="@dimen/_2sdp">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lc_my_goal_activity_log_chart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@drawable/ll_home_back" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSelectedStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/tvOnSelectedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/staffOnSelected"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        tools:text="Monday, March 22,2021"
                        ></TextView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_gravity="end">

                        <TextView
                            android:id="@+id/tvStaffSelectedLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/staffOnSelected"
                            android:layout_marginEnd="@dimen/_5sdp"
                            ></TextView>
                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/scSelected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOnSelectedStaff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.bzboss.app.custom.NonscrollRecyclerview
                        android:id="@+id/rv_set_staff_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/ll_graph_back"
                        android:padding="@dimen/_12sdp"
                        android:visibility="gone" />

                    <com.bzboss.app.custom.MyCustomTextView
                        android:id="@+id/tv_no_staff_available"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/ll_graph_back"
                        android:gravity="center"
                        android:text="No staff data available"
                        android:textSize="@dimen/_12sdp"
                        android:visibility="gone" />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>